<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="twotom.bookhub">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Log In">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookSearchActivity"
            android:label="Search a Book" />
        <activity
            android:name=".RegistrationActivity"
            android:label="Sign Up" />
        <activity
            android:name=".HomeActivity"
            android:label="BookHub" />
        <activity
            android:name=".WishListActivity"
            android:label="Wish List" />
        <activity
            android:name=".MyBooksActivity"
            android:label="My Books" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" />
        <activity
            android:name=".BookSearchResultActivity"
            android:label="Search Result" />
        <activity
            android:name=".ViewProfileActivity"
            android:label="@string/title_activity_view_profile"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".BookItemListActivity"
            android:label="Books for Sale"/>
        <activity
            android:name=".TransactionHistoryActivity"
            android:label="Transaction History"/>
        <activity
            android:name=".TransactionActivity"
            android:label="Transaction"/>
        <activity
            android:name=".EditBookItemActivity"
            android:label="Edit Book For Sale"/>
        <activity
            android:name=".BookSearchResultsActivity"
            android:label="Search Results"/>
        <activity
            android:name=".ChatListActivity"
            android:label="Chats"/>
        <activity
            android:name=".ChatActivity"
            android:label="Chat"
            android:windowSoftInputMode="adjustPan"/>
        <service
            android:name=".BookHubFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".BookHubFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>
