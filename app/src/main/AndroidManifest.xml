<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="twotom.bookhub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Log In">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookSearchActivity"
            android:label="Search a Book" />
        <activity
            android:name=".RegistrationActivity"
            android:label="Register" />
        <activity
            android:name=".HomeActivity"
            android:label="BookHub" />
        <activity
            android:name=".WishListActivity"
            android:label="Wish List" />
        <activity
            android:name=".MyBooksActivity"
            android:label="My Books" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" />
        <activity
            android:name=".BookSearchResultActivity"
            android:label="Search Result" />
        <activity
            android:name=".BookForSaleActivity"
            android:label="Book for Sale" />
        <activity
            android:name=".ViewProfileActivity"
            android:label="@string/title_activity_view_profile"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".BookItemsListActivity"
            android:label="Book Items"/>
        <activity
            android:name=".TransactionHistoryActivity"
            android:label="Transaction History"/>
        <activity
            android:name=".TransactionActivity"
            android:label="Transaction"/>
        <activity
            android:name=".EditBookForSaleActivity"
            android:label="Edit Book For Sale"/>
    </application>

</manifest>
